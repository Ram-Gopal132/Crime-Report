<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	<listener>
	
	<listener-class>com.app.DatabaseConnection</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>UploadCrimeServlet</servlet-name>
		<servlet-class>com.app.UploadCrimeServlet</servlet-class>
	
	</servlet>
	
	<servlet-mapping>
	
			<servlet-name>UploadCrimeServlet</servlet-name>
			<url-pattern>/UploadCrimeServlet</url-pattern>
	
	</servlet-mapping>
	<display-name>Crime Report Solver</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp </welcome-file>
	</welcome-file-list>
</web-app>